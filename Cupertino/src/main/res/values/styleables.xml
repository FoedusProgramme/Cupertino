<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="icon" format="reference" />
    <attr name="iconSize" format="dimension" />
    <attr name="drawable" format="reference" />
    <attr name="cornerRadius" format="dimension" />
    <attr name="strokeWidth" format="dimension" />
    <attr name="strokeColor" format="color" />

    <declare-styleable name="OverlayTextView">
        <attr name="textViewLayer" format="enum">
            <enum name="primary" value="0" />
            <enum name="secondary" value="1" />
            <enum name="tertiary" value="2" />
            <enum name="standard" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="OverlayButton">
        <attr name="viewLayer" format="enum">
            <enum name="primary" value="0" />
            <enum name="secondary" value="1" />
            <enum name="tertiary" value="2" />
            <enum name="standard" value="3" />
        </attr>
        <attr name="icon" />
        <attr name="iconSize" />
    </declare-styleable>

    <declare-styleable name="OverlaySlider">
        <attr name="momentum" format="boolean" />
        <attr name="overshoot" format="boolean" />
        <attr name="resizeFactor" format="float" />
        <attr name="sidePadding" format="dimension" />
    </declare-styleable>

    <declare-styleable name="OverlayBackgroundButton">
        <attr name="icon" />
        <attr name="iconSize" />
    </declare-styleable>

    <declare-styleable name="AnimatedVectorButton">
        <attr name="icon" />
        <attr name="iconSize" />
    </declare-styleable>

    <declare-styleable name="StateAnimatedVectorButton">
        <attr name="icon" />
        <attr name="iconSize" />
        <attr name="iconState" format="reference" />
    </declare-styleable>

    <declare-styleable name="OverlayHintView">
        <attr name="icon" />
        <attr name="iconSize" />
    </declare-styleable>

    <declare-styleable name="SimpleImageView">
        <attr name="drawable" />
        <attr name="cornerRadius" />
        <attr name="strokeWidth" />
        <attr name="strokeColor" />
    </declare-styleable>

    <declare-styleable name="OverlayPillButton">
        <attr name="icon" />
        <attr name="iconSize" />
        <attr name="cornerRadius" />
    </declare-styleable>

    <declare-styleable name="OverlayTextPillButton">
        <attr name="android:text" />
        <attr name="icon" />
        <attr name="iconSize" />
        <attr name="cornerRadius" />
    </declare-styleable>


</resources>